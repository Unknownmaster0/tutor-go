# TutorGo Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database Configuration
DATABASE_URL=postgresql://tutorgo:YOUR_PASSWORD@postgres:5432/tutorgo
POSTGRES_DB=tutorgo
POSTGRES_USER=tutorgo
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/tutorgo
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=YOUR_SECURE_PASSWORD

# Redis Configuration
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=YOUR_SECURE_PASSWORD

# RabbitMQ Configuration
RABBITMQ_URL=amqp://tutorgo:YOUR_PASSWORD@rabbitmq:5672
RABBITMQ_USER=tutorgo
RABBITMQ_PASSWORD=YOUR_SECURE_PASSWORD

# JWT Configuration
JWT_SECRET=YOUR_VERY_LONG_RANDOM_SECRET_KEY_HERE
JWT_REFRESH_SECRET=YOUR_VERY_LONG_RANDOM_REFRESH_SECRET_KEY_HERE

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@tutorgo.com

# Google Maps Configuration
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_api_key

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Node Environment
NODE_ENV=production
